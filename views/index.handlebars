{{!-- Header --}}
<header>
    <h1>Eat-Da-Burger</h1>
</header>

{{!-- Input Section --}}
<section class="input-section">
    <h3>Enter A Burger You Want To Eat</h3>
    <form action="">
        <input type="text" class="input-box">
        <button type="submit">Submit</button>
    </form>
</section>

{{!-- Burgers To Eat Section --}}
<section class="bgrs-not-eaten">
    <h3>Burgers To Eat:</h3>
    {{!-- burgers not devoured --}}
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
    </ul>
</section>

{{!-- Main Burger Image Section --}}
<section class="burger-img">
    <img src="/assets/img/burger-pic.jpg" alt="Photo by Pablo MerchÃ¡n Montes on Unsplash">
</section>

{{!-- Burgers Eaten Section --}}
<section class="bgrs-eaten">
    {{!-- burgers devoured --}}
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{id}} {{burger_name}}</li>
        {{/if}}
        {{/each}}
    </ul>
</section>